#!/bin/bash
#
# Display fortunes using cowsay.
#

function _splash() {

# check for fortune command.
if command -v fortune &>/dev/null; then
  text=$(fortune -s)
else
  text="Install fortune (brew install fortune) and see the magic. (!)"
fi

# check for cowsay command.
if command -v cowsay &>/dev/null; then
    # Check if starwar cowfile exists
    if cowsay -l 2>/dev/null | grep -q starwar; then
        cowsay -f starwar "$text"
    else
        cowsay "$text"
    fi
else
    echo "Install fortune and cowsay to turn me into speak wizard. (!)"
fi
}

_splash "$@"
